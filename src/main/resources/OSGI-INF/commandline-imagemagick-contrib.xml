<?xml version="1.0"?>
<component name="org.nuxeo.thumb.picture.commandline.imagemagick">

  <require>org.nuxeo.ecm.platform.picture.commandline.imagemagick</require>

  <extension target="org.nuxeo.ecm.platform.commandline.executor.service.CommandLineExecutorComponent"
    point="command">

    <command name="toThumbnail" enabled="true">
      <commandLine>convert</commandLine>
      <parameterString>-strip -thumbnail '%sizex%size'  -background transparent -gravity center -extent '%sizex%size' -format png -quality 75 #{inputFilePath}[0] #{outputFilePath}</parameterString>
      <winParameterString>-strip -thumbnail "%sizex%size" -background transparent -gravity center -extent "%sizex%size" -format png -quality 75 #{inputFilePath}[0] #{outputFilePath}</winParameterString>
      <installationDirective>You need to install ImageMagick.</installationDirective>
    </command>

  </extension>

</component>
